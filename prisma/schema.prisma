generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model category_price {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(20)
  pfive    Int
  one      Int
  onepfive Int
  two      Int
  twopfive Int
  three    Int
  flavour  flavour[]
}

model flavour {
  id             Int             @id @default(autoincrement())
  name           String?         @db.VarChar(50)
  category_id    Int?
  category_price category_price? @relation(fields: [category_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  order_item     order_item[]
}

model order {
  id              Int          @id @default(autoincrement())
  client_name     String       @db.VarChar(100)
  client_phone    String       @db.VarChar(20)
  date            DateTime     @default(now()) @db.Timestamp(6)
  collection_date DateTime     @db.Date
  collection_time String       @db.VarChar(10)
  order_total     Int
  delivery        Boolean
  order_item      order_item[]
}

model order_item {
  id             Int      @id @default(autoincrement())
  flavour_id     Int?
  size           String   @db.VarChar(10)
  wording        String   @db.VarChar(25)
  specifications String?  @db.VarChar(300)
  order_id       Int?
  add_on_id      Int?
  add_ons        add_ons? @relation(fields: [add_on_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  flavour        flavour? @relation(fields: [flavour_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  order          order?   @relation(fields: [order_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model add_ons {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(20)
  price      Int
  order_item order_item[]
}
